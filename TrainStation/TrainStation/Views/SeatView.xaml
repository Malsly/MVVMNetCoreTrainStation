<UserControl x:Class="TrainStation.Views.SeatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrainStation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ComboBox 
        x:Name="selectSeat" 
        Text="Select Seat"
        ItemsSource="{Binding Path=Seats}"
        DisplayMemberPath="Number"
        SelectedValuePath="Id"
        SelectedValue="{Binding Path=SelectedSeatId}" Margin="186,10,400,394" SelectionChanged="selectSeat_SelectionChanged" DropDownOpened="selectSeat_DropDownOpened" />
    </Grid>
</UserControl>
